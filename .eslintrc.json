{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "jasmine": true
  },
  "extends": [
    "standard",
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "ignorePatterns": [
      "./dist/**/*.js"
  ],
  "rules": {
    "no-unused-expressions": "off",
    "space-before-function-paren": [
      "error",
      "never"
    ],
    "keyword-spacing": [
      "error",
      {
        "before": true,
        "after": true 
      }
    ],
    "eol-last": [
      "error",
      "always"
    ],
    "semi": [
      "error",
      "always"
    ],
    "semi-spacing": [
      "error",
      {
        "after": true,
        "before": false
      }
    ],
    "semi-style": [
      "error",
      "last"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "no-extra-semi": "error",
    "no-unexpected-multiline": "error",
    "no-unreachable": "error",
    "no-underscore-dangle": "off"
  }
}

